generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Order {
  id          String   @id @default(uuid())
  type        String   // "MARKET", "LIMIT", "SNIPER"
  inputToken  String
  outputToken String
  amount      String   // Stored as string to handle large numbers/decimals
  status      String   // "PENDING", "ROUTING", "BUILDING", "SUBMITTED", "CONFIRMED", "FAILED"
  txHash      String?
  logs        Json?    // Array of log strings or objects
  error       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
